<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.waterbanana.meetapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateEntry"
            android:label="@string/title_activity_create_entry" >
        </activity>
        <activity
            android:name=".RemoveEntry"
            android:label="@string/title_activity_remove_entry" >
        </activity>
        <activity
            android:name=".CreateGroup"
            android:label="@string/title_activity_create_group" >
        </activity>
        <activity
            android:name=".RemoveGroup"
            android:label="@string/title_activity_remove_group" >
        </activity>
        <activity
            android:name=".DrawAppMainActivity"
            android:label="@string/title_activity_draw_app_main" >
        </activity>
        <activity
            android:name=".Availability"
            android:label="@string/title_activity_availability" >
        </activity>
    </application>

</manifest>
