<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- <include layout="@layout/toolbar" android:id="@+id/toolbar"/>-->
    <!--, This is used alogn with SocialFrag.java, TitlesFragment.Java, DetailsFragment.java,
            GroupInfo.java, SocialScreen.java-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:textColor="@color/ColorPrimary"
        android:layout_gravity="center"
        android:text="Your Groups"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">
       <!-- android:weightSum="8">-->
        <ListView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/titles"/>
           <!-- android:layout_weight="1"/>-->
        <RelativeLayout
            android:id="@+id/details"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="?android:attr/detailsElementBackground"/>
           <!-- android:layout_weight="7"-->


    </LinearLayout>
    <LinearLayout
        android:id="@+id/GroupButtons"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/CreateG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CREATE">
        </Button>
        <Button
            android:id="@+id/LeaveG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LEAVE">
        </Button>
    </LinearLayout>
</LinearLayout>